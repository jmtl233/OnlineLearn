;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA","file":"AskAndAnswer.vue","sourceRoot":"src/views/studentweb/askandanswer","sourcesContent":["<template>\r\n    <div class=\"qa-container\">\r\n        <!-- 头部区域 -->\r\n        <header class=\"app-header\">\r\n            <div class=\"header-content\">\r\n                <h1 class=\"app-title\">智问社区</h1>\r\n                <p class=\"app-subtitle\">知识共享空间</p>\r\n            </div>\r\n            <div class=\"header-divider\"></div>\r\n        </header>\r\n\r\n        <!-- 内容区域 -->\r\n        <main class=\"content-main\">\r\n            <transition-group\r\n                name=\"staggered-fade\"\r\n                tag=\"div\"\r\n                class=\"qa-grid\"\r\n            >\r\n                <article\r\n                    v-for=\"t in NotHomeWork\"\r\n                    :key=\"t.id\"\r\n                    class=\"qa-card\"\r\n                    :class=\"{ 'has-answer': t.restore }\"\r\n                >\r\n                    <!-- 卡片头部 -->\r\n                    <div class=\"card-header\">\r\n                        <div class=\"topic-meta\">\r\n              <span\r\n                  class=\"topic-badge\"\r\n                  :style=\"{ backgroundColor: getTopicColor(t.topic) }\"\r\n              >\r\n                {{ t.topic }}\r\n              </span>\r\n                            <time class=\"time-info\">{{ t.createTime || '2024-03-20' }}</time>\r\n                        </div>\r\n                        <div\r\n                            class=\"status-indicator\"\r\n                            :class=\"t.restore ? 'answered' : 'pending'\"\r\n                        >\r\n                            <i :class=\"t.restore ? 'icon-check' : 'icon-clock'\" />\r\n                            {{ t.status || '待回复' }}\r\n                        </div>\r\n                    </div>\r\n\r\n                    <!-- 问题内容 -->\r\n                    <section class=\"question-section\">\r\n                        <div class=\"asker-info\">\r\n                            <div class=\"user-avatar\">\r\n                                <i class=\"icon-user\" />\r\n                            </div>\r\n                            <div class=\"user-meta\">\r\n                                <h3 class=\"user-name\">{{ t.senderName }}</h3>\r\n                                <span class=\"user-role\">提问者</span>\r\n                            </div>\r\n                        </div>\r\n                        <blockquote class=\"question-content\">\r\n                            <p>{{ t.content }}</p>\r\n                        </blockquote>\r\n                    </section>\r\n\r\n                    <!-- 回答内容 -->\r\n                    <transition name=\"slide-up\">\r\n                        <section\r\n                            v-if=\"t.restore\"\r\n                            class=\"answer-section\"\r\n                        >\r\n                            <div class=\"expert-header\">\r\n                                <div class=\"expert-avatar\">\r\n                                    <i class=\"icon-expert\" />\r\n                                </div>\r\n                                <div class=\"expert-meta\">\r\n                                    <h3 class=\"expert-name\">{{ t.recipientName }}</h3>\r\n                                    <span class=\"expert-title\">认证导师</span>\r\n                                </div>\r\n                            </div>\r\n                            <div class=\"answer-content\">\r\n                                <p>{{ t.restore }}</p>\r\n                                <div class=\"expert-seal\">\r\n                                    <i class=\"icon-seal\" />\r\n                                </div>\r\n                            </div>\r\n                        </section>\r\n                    </transition>\r\n\r\n                    <!-- 等待状态 -->\r\n                    <div\r\n                        v-else=\"v-else\"\r\n                        key=\"pending\"\r\n                        class=\"pending-state\"\r\n                    >\r\n                        <div class=\"loading-animation\">\r\n                            <div class=\"loading-bar\"></div>\r\n                        </div>\r\n                        <p class=\"loading-text\">等待导师回复中</p>\r\n                    </div>\r\n                </article>\r\n            </transition-group>\r\n\r\n            <!-- 分页 -->\r\n            <el-pagination\r\n                class=\"pagination\"\r\n                background\r\n                :current-page=\"page.page\"\r\n                :page-size=\"page.pageSize\"\r\n                :page-sizes=\"[10, 20, 30, 40]\"\r\n                layout=\"prev, pager, next, jumper\"\r\n                :total=\"NotHomeWork.length\"\r\n                @size-change=\"handleSizeChange\"\r\n                @current-change=\"handleCurrentChange\"\r\n            />\r\n        </main>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nimport { askandanswer } from '../../../api/studentweb/askandanswer.js'\r\nimport Cookies from \"js-cookie\";\r\n\r\nexport default {\r\n    name: \"AskAndAnswer\",\r\n    data() {\r\n        return {\r\n            page: {\r\n                page: 1,\r\n                pageSize: 10,\r\n                userId: 0,\r\n            },\r\n            NotHomeWork: [],\r\n        }\r\n    },\r\n    created() {\r\n        this.page.userId = Cookies.get('userId')\r\n        this.CheckWork(this.page)\r\n    },\r\n    methods: {\r\n        handleSizeChange(size) {\r\n            this.page.pageSize = size;\r\n            this.listAllStudentsScore(this.page)\r\n        },\r\n        handleCurrentChange(pageNum) {\r\n            this.page.pageNum = pageNum;\r\n            this.listAllStudentsScore(this.page)\r\n        },\r\n        CheckWork(valid) {\r\n            askandanswer(valid).then(resp => {\r\n                this.NotHomeWork = resp.data.resultData.data\r\n            })\r\n        },\r\n        getTopicColor(topic) {\r\n            const colors = {\r\n                '数学': '#6C8EBF',\r\n                '语文': '#D79A8F',\r\n                '英语': '#B8A5D9',\r\n                '物理': '#8FCB9B',\r\n                '化学': '#EED294'\r\n            }\r\n            return colors[topic] || '#9BA7B5'\r\n        }\r\n    }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n@mixin flex-space-between {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\r\n}\r\n\r\n$primary: #2C3E50;\r\n$secondary: #9BA7B5;\r\n$accent: #6C8EBF;\r\n$success: #8FCB9B;\r\n$warning: #EED294;\r\n\r\n.qa-container {\r\n    max-width: 1280px;\r\n    margin: 0 auto;\r\n    padding: 2rem;\r\n    font-family: 'Helvetica Neue', sans-serif;\r\n}\r\n\r\n.app-header {\r\n    margin-bottom: 4rem;\r\n    .header-content {\r\n        text-align: center;\r\n        margin-bottom: 1.5rem;\r\n    }\r\n    .app-title {\r\n        font-size: 2.8rem;\r\n        font-weight: 300;\r\n        color: $primary;\r\n        letter-spacing: 2px;\r\n        margin-bottom: 0.5rem;\r\n    }\r\n    .app-subtitle {\r\n        color: lighten($secondary, 15%);\r\n        font-size: 1.1rem;\r\n        letter-spacing: 1px;\r\n    }\r\n    .header-divider {\r\n        height: 1px;\r\n        background: linear-gradient(90deg, transparent, rgba($accent, 0.3), transparent);\r\n        margin: 2rem 0;\r\n    }\r\n}\r\n\r\n.qa-grid {\r\n    display: grid;\r\n    gap: 2rem;\r\n    margin-bottom: 3rem;\r\n}\r\n\r\n.qa-card {\r\n    background: white;\r\n    border-radius: 12px;\r\n    padding: 2rem;\r\n    box-shadow: 0 4px 20px rgba(0,0,0,0.03);\r\n    transition: transform 0.25s ease, box-shadow 0.25s ease;\r\n    position: relative;\r\n    overflow: hidden;\r\n\r\n    &:hover {\r\n        transform: translateY(-5px);\r\n        box-shadow: 0 8px 30px rgba(0,0,0,0.06);\r\n    }\r\n\r\n    &.has-answer {\r\n        border-left: 3px solid $success;\r\n    }\r\n}\r\n\r\n.card-header {\r\n    @include flex-space-between;\r\n    margin-bottom: 2rem;\r\n    padding-bottom: 1rem;\r\n    border-bottom: 1px solid rgba($secondary, 0.1);\r\n\r\n    .topic-badge {\r\n        padding: 4px 12px;\r\n        border-radius: 20px;\r\n        color: white;\r\n        font-size: 0.85rem;\r\n        letter-spacing: 0.5px;\r\n    }\r\n\r\n    .time-info {\r\n        color: lighten($secondary, 15%);\r\n        font-size: 0.9rem;\r\n        margin-top: 0.5rem;\r\n    }\r\n\r\n    .status-indicator {\r\n        padding: 6px 14px;\r\n        border-radius: 20px;\r\n        font-size: 0.9rem;\r\n\r\n        &.answered {\r\n            background: rgba($success, 0.1);\r\n            color: darken($success, 10%);\r\n        }\r\n\r\n        &.pending {\r\n            background: rgba($warning, 0.1);\r\n            color: darken($warning, 20%);\r\n        }\r\n    }\r\n}\r\n\r\n.question-section {\r\n    .asker-info {\r\n        display: flex;\r\n        align-items: center;\r\n        margin-bottom: 1.5rem;\r\n\r\n        .user-avatar {\r\n            width: 40px;\r\n            height: 40px;\r\n            border-radius: 50%;\r\n            background: rgba($accent, 0.1);\r\n            display: flex;\r\n            align-items: center;\r\n            justify-content: center;\r\n            margin-right: 1rem;\r\n\r\n            i {\r\n                color: $accent;\r\n                font-size: 1.4rem;\r\n            }\r\n        }\r\n\r\n        .user-name {\r\n            font-size: 1.1rem;\r\n            color: $primary;\r\n            margin-bottom: 0.25rem;\r\n        }\r\n\r\n        .user-role {\r\n            color: lighten($secondary, 10%);\r\n            font-size: 0.85rem;\r\n        }\r\n    }\r\n\r\n    .question-content {\r\n        color: $primary;\r\n        font-size: 1.1rem;\r\n        line-height: 1.8;\r\n        padding-left: 2rem;\r\n        border-left: 2px solid rgba($accent, 0.3);\r\n        margin-left: 1rem;\r\n    }\r\n}\r\n\r\n.answer-section {\r\n    margin-top: 2rem;\r\n    padding-top: 2rem;\r\n    border-top: 1px solid rgba($secondary, 0.1);\r\n\r\n    .expert-header {\r\n        display: flex;\r\n        align-items: center;\r\n        margin-bottom: 1.5rem;\r\n\r\n        .expert-avatar {\r\n            width: 40px;\r\n            height: 40px;\r\n            border-radius: 50%;\r\n            background: rgba($success, 0.1);\r\n            display: flex;\r\n            align-items: center;\r\n            justify-content: center;\r\n            margin-right: 1rem;\r\n\r\n            i {\r\n                color: $success;\r\n                font-size: 1.4rem;\r\n            }\r\n        }\r\n\r\n        .expert-name {\r\n            font-size: 1.1rem;\r\n            color: $primary;\r\n            margin-bottom: 0.25rem;\r\n        }\r\n\r\n        .expert-title {\r\n            color: $success;\r\n            font-size: 0.85rem;\r\n            letter-spacing: 0.5px;\r\n        }\r\n    }\r\n\r\n    .answer-content {\r\n        position: relative;\r\n        background: rgba($success, 0.03);\r\n        border-radius: 8px;\r\n        padding: 1.5rem;\r\n        color: darken($primary, 5%);\r\n\r\n        p {\r\n            line-height: 1.8;\r\n        }\r\n    }\r\n\r\n    .expert-seal {\r\n        position: absolute;\r\n        top: -20px;\r\n        right: -10px;\r\n        color: rgba($success, 0.3);\r\n        font-size: 2.5rem;\r\n    }\r\n}\r\n\r\n.pending-state {\r\n    text-align: center;\r\n    padding: 2rem 0;\r\n\r\n    .loading-animation {\r\n        height: 2px;\r\n        background: rgba($accent, 0.1);\r\n        border-radius: 2px;\r\n        margin-bottom: 1.5rem;\r\n        overflow: hidden;\r\n\r\n        .loading-bar {\r\n            width: 40%;\r\n            height: 100%;\r\n            background: $accent;\r\n            animation: loading 2s ease-in-out infinite;\r\n        }\r\n    }\r\n\r\n    .loading-text {\r\n        color: lighten($secondary, 10%);\r\n        font-size: 0.95rem;\r\n    }\r\n}\r\n\r\n.pagination {\r\n    margin-top: 3rem;\r\n    justify-content: center;\r\n\r\n    ::v-deep .el-pagination.is-background .el-pager li {\r\n        min-width: 36px;\r\n        height: 36px;\r\n        line-height: 36px;\r\n        border-radius: 8px;\r\n        margin: 0 4px;\r\n    }\r\n}\r\n\r\n@keyframes loading {\r\n    0% { transform: translateX(-100%); }\r\n    100% { transform: translateX(250%); }\r\n}\r\n\r\n@keyframes staggered-fade {\r\n    0% { opacity: 0; transform: translateY(20px); }\r\n    100% { opacity: 1; transform: translateY(0); }\r\n}\r\n\r\n.staggered-fade-move {\r\n    transition: all 0.6s ease;\r\n}\r\n.staggered-fade-enter-active {\r\n    animation: staggered-fade 0.6s ease;\r\n}\r\n.staggered-fade-leave-active {\r\n    animation: staggered-fade 0.6s reverse;\r\n}\r\n\r\n.slide-up-enter-active {\r\n    transition: all 0.4s ease;\r\n}\r\n.slide-up-enter {\r\n    opacity: 0;\r\n    transform: translateY(20px);\r\n}\r\n\r\n@media (max-width: 768px) {\r\n    .qa-container {\r\n        padding: 1rem;\r\n    }\r\n\r\n    .app-title {\r\n        font-size: 2rem !important;\r\n    }\r\n\r\n    .qa-card {\r\n        padding: 1.5rem;\r\n    }\r\n}\r\n</style>"]}]}