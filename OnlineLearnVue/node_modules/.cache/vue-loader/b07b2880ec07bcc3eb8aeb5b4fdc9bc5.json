{"remainingRequest":"E:\\OnlineLearn\\OnlineLearnVue\\node_modules\\vue-loader\\lib\\index.js??vue-loader-options!E:\\OnlineLearn\\OnlineLearnVue\\src\\views\\studentweb\\essentialinformation\\EssentiaInfo.vue?vue&type=style&index=0&id=3f16473e&lang=scss&scoped=true&","dependencies":[{"path":"E:\\OnlineLearn\\OnlineLearnVue\\src\\views\\studentweb\\essentialinformation\\EssentiaInfo.vue","mtime":1744734766570},{"path":"E:\\OnlineLearn\\OnlineLearnVue\\node_modules\\css-loader\\dist\\cjs.js","mtime":1711182487975},{"path":"E:\\OnlineLearn\\OnlineLearnVue\\node_modules\\vue-loader\\lib\\loaders\\stylePostLoader.js","mtime":1711182506221},{"path":"E:\\OnlineLearn\\OnlineLearnVue\\node_modules\\postcss-loader\\src\\index.js","mtime":1711182496599},{"path":"E:\\OnlineLearn\\node_modules\\sass-loader\\dist\\cjs.js","mtime":499162500000},{"path":"E:\\OnlineLearn\\OnlineLearnVue\\node_modules\\cache-loader\\dist\\cjs.js","mtime":1711182484313},{"path":"E:\\OnlineLearn\\OnlineLearnVue\\node_modules\\vue-loader\\lib\\index.js","mtime":1711182506214}],"contextDependencies":[],"result":[{"type":"Buffer","data":"base64:"},{"version":3,"sources":["EssentiaInfo.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAoPA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA","file":"EssentiaInfo.vue","sourceRoot":"src/views/studentweb/essentialinformation","sourcesContent":["<template>\r\n    <div class=\"app-container\">\r\n        <!-- 用户信息展示 -->\r\n        <el-card shadow=\"hover\" class=\"user-info-card\">\r\n            <el-descriptions title=\"个人信息概览\" :column=\"3\" border>\r\n                <template slot=\"extra\">\r\n                    <el-button\r\n                        type=\"primary\"\r\n                        size=\"small\"\r\n                        icon=\"el-icon-edit\"\r\n                        @click=\"showEditDialog\"\r\n                    >编辑信息</el-button>\r\n                </template>\r\n\r\n                <el-descriptions-item label=\"用户名\">\r\n                    <el-tag effect=\"dark\">{{ Info.userName }}</el-tag>\r\n                </el-descriptions-item>\r\n\r\n                <el-descriptions-item label=\"手机号\">\r\n                    <el-link :href=\"`tel:${Info.phone}`\" type=\"primary\">\r\n                        {{ Info.phone }}\r\n                    </el-link>\r\n                </el-descriptions-item>\r\n\r\n                <el-descriptions-item label=\"性别\">\r\n                    <el-tag :type=\"Info.sex === 0 ? 'primary' : 'danger'\">\r\n                        {{ Info.sex === 0 ? '男' : '女' }}\r\n                    </el-tag>\r\n                </el-descriptions-item>\r\n\r\n                <el-descriptions-item label=\"注册时间\">\r\n                    {{ formatTime(Info.createTime) }}\r\n                </el-descriptions-item>\r\n\r\n                <el-descriptions-item label=\"电子邮箱\">\r\n                    <el-link :href=\"`mailto:${Info.email}`\" type=\"success\">\r\n                        {{ Info.email || '未设置' }}\r\n                    </el-link>\r\n                </el-descriptions-item>\r\n\r\n                <el-descriptions-item label=\"最后登录\">\r\n                    {{ formatTime(Info.lastLogin) }}\r\n                </el-descriptions-item>\r\n            </el-descriptions>\r\n        </el-card>\r\n\r\n        <!-- 编辑对话框 -->\r\n        <el-dialog\r\n            title=\"编辑个人信息\"\r\n            :visible.sync=\"dialogFormVisible\"\r\n            width=\"700px\"\r\n            @closed=\"resetForm\"\r\n        >\r\n            <el-form\r\n                ref=\"editForm\"\r\n                :model=\"formData\"\r\n                :rules=\"formRules\"\r\n                label-position=\"left\"\r\n                label-width=\"100px\"\r\n            >\r\n                <el-row :gutter=\"20\">\r\n                    <el-col :span=\"12\">\r\n                        <el-form-item label=\"用户名\" prop=\"userName\">\r\n                            <el-input\r\n                                v-model=\"formData.userName\"\r\n                                placeholder=\"请输入用户名\"\r\n                                clearable\r\n                                prefix-icon=\"el-icon-user\"\r\n                            />\r\n                        </el-form-item>\r\n\r\n                        <el-form-item label=\"性别\" prop=\"sex\">\r\n                            <el-radio-group v-model=\"formData.sex\">\r\n                                <el-radio :label=\"0\">男</el-radio>\r\n                                <el-radio :label=\"1\">女</el-radio>\r\n                            </el-radio-group>\r\n                        </el-form-item>\r\n\r\n                        <el-form-item label=\"出生日期\" prop=\"birthday\">\r\n                            <el-date-picker\r\n                                v-model=\"formData.birthday\"\r\n                                type=\"date\"\r\n                                value-format=\"yyyy-MM-dd\"\r\n                                placeholder=\"选择日期\"\r\n                                style=\"width: 100%\"\r\n                            />\r\n                        </el-form-item>\r\n                    </el-col>\r\n\r\n                    <el-col :span=\"12\">\r\n                        <el-form-item label=\"手机号\" prop=\"phone\">\r\n                            <el-input\r\n                                v-model=\"formData.phone\"\r\n                                placeholder=\"11位手机号码\"\r\n                                clearable\r\n                                prefix-icon=\"el-icon-mobile-phone\"\r\n                            >\r\n                                <template slot=\"prepend\">+86</template>\r\n                            </el-input>\r\n                        </el-form-item>\r\n\r\n                        <el-form-item label=\"电子邮箱\" prop=\"email\">\r\n                            <el-input\r\n                                v-model=\"formData.email\"\r\n                                placeholder=\"example@domain.com\"\r\n                                clearable\r\n                                prefix-icon=\"el-icon-message\"\r\n                            />\r\n                        </el-form-item>\r\n\r\n                        <el-form-item label=\"所在地区\" prop=\"region\">\r\n                            <el-cascader\r\n                                v-model=\"formData.region\"\r\n                                :options=\"regionOptions\"\r\n                                placeholder=\"请选择地区\"\r\n                                clearable\r\n                            />\r\n                        </el-form-item>\r\n                    </el-col>\r\n                </el-row>\r\n\r\n                <el-form-item label=\"个人简介\" prop=\"bio\">\r\n                    <el-input\r\n                        v-model=\"formData.bio\"\r\n                        type=\"textarea\"\r\n                        :rows=\"3\"\r\n                        placeholder=\"介绍一下自己...\"\r\n                        maxlength=\"150\"\r\n                        show-word-limit\r\n                    />\r\n                </el-form-item>\r\n            </el-form>\r\n\r\n            <div slot=\"footer\" class=\"dialog-footer\">\r\n                <el-button @click=\"dialogFormVisible = false\">取消</el-button>\r\n                <el-button\r\n                    type=\"primary\"\r\n                    :loading=\"submitting\"\r\n                    @click=\"handleSubmit\"\r\n                >保存更改</el-button>\r\n            </div>\r\n        </el-dialog>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nimport { getUserInfo, updateUserInfo } from '@/api/user'\r\nimport { regionData } from 'element-china-area-data'\r\n\r\nexport default {\r\n    name: 'UserProfile',\r\n    data() {\r\n        return {\r\n            dialogFormVisible: false,\r\n            submitting: false,\r\n            Info: {\r\n                userName: '',\r\n                phone: '',\r\n                sex: 0,\r\n                createTime: '',\r\n                email: '',\r\n                lastLogin: '',\r\n                birthday: '',\r\n                region: [],\r\n                bio: ''\r\n            },\r\n            formData: {},\r\n            regionOptions: regionData,\r\n            formRules: {\r\n                userName: [\r\n                    { required: true, message: '请输入用户名', trigger: 'blur' },\r\n                    { min: 2, max: 12, message: '长度在2到12个字符', trigger: 'blur' }\r\n                ],\r\n                phone: [\r\n                    { required: true, message: '请输入手机号码', trigger: 'blur' },\r\n                    { pattern: /^1[3-9]\\d{9}$/, message: '手机号格式不正确' }\r\n                ],\r\n                email: [\r\n                    { type: 'email', message: '邮箱格式不正确', trigger: 'blur' }\r\n                ],\r\n                birthday: [\r\n                    { type: 'string', required: true, message: '请选择出生日期' }\r\n                ],\r\n                bio: [\r\n                    { max: 150, message: '最多输入150个字符', trigger: 'blur' }\r\n                ]\r\n            }\r\n        }\r\n    },\r\n    created() {\r\n        this.fetchUserInfo()\r\n    },\r\n    methods: {\r\n        // 获取用户信息\r\n        async fetchUserInfo() {\r\n            try {\r\n                const { data } = await getUserInfo()\r\n                this.Info = data\r\n                this.formData = { ...data }\r\n            } catch (error) {\r\n                console.error('获取用户信息失败:', error)\r\n            }\r\n        },\r\n\r\n        // 显示编辑对话框\r\n        showEditDialog() {\r\n            this.dialogFormVisible = true\r\n        },\r\n\r\n        // 提交表单\r\n        async handleSubmit() {\r\n            try {\r\n                const valid = await this.$refs.editForm.validate()\r\n                if (!valid) return\r\n\r\n                this.submitting = true\r\n                await updateUserInfo(this.formData)\r\n\r\n                this.$message.success('信息更新成功')\r\n                await this.fetchUserInfo()\r\n                this.dialogFormVisible = false\r\n            } catch (error) {\r\n                console.error('更新失败:', error)\r\n                this.$message.error(error.message || '更新失败')\r\n            } finally {\r\n                this.submitting = false\r\n            }\r\n        },\r\n\r\n        // 重置表单\r\n        resetForm() {\r\n            this.$refs.editForm.resetFields()\r\n            this.formData = { ...this.Info }\r\n        },\r\n\r\n        // 时间格式化\r\n        formatTime(time) {\r\n            return this.$dayjs(time).format('YYYY-MM-DD HH:mm')\r\n        }\r\n    }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n.app-container {\r\n    padding: 24px;\r\n    background: #f5f7fa;\r\n}\r\n\r\n.user-info-card {\r\n    margin: 20px auto;\r\n    max-width: 1000px;\r\n    border-radius: 8px;\r\n\r\n    ::v-deep .el-descriptions__title {\r\n        font-size: 18px;\r\n        color: #303133;\r\n    }\r\n\r\n    .el-tag {\r\n        margin-right: 5px;\r\n    }\r\n}\r\n\r\n.dialog-footer {\r\n    padding: 16px 0 0;\r\n    text-align: right;\r\n}\r\n\r\n.el-cascader, .el-date-editor {\r\n    width: 100%;\r\n}\r\n\r\n.el-form-item {\r\n    margin-bottom: 18px;\r\n}\r\n</style>"]}]}